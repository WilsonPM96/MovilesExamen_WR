<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wilson.examen_moviles">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission
        android:name="android.permission.CAMERA"
        android:required="true" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActividadCrear" />
        <activity android:name=".ActividadListar" />
        <activity android:name=".AdaptadorEstudiante" />
        <activity android:name=".CrearMateriaActivity" />
        <activity android:name=".DetalleActivity" />
        <activity android:name=".ActivityDetalleMateria" />
        <activity android:name=".ActivityEditarEstudiante" />
        <activity
            android:name=".HttpFuelActivity"
            android:label="@string/title_activity_http_fuel"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>